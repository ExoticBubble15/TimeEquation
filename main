import java.util.*;

public class TimeEquation {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("Enter time equation.");
		String expression = input.nextLine();
		expression = expression.replaceAll("\\s", "") + "+";
		
		ArrayList<Integer> hours = new ArrayList<Integer>();
		ArrayList<Integer> minutes = new ArrayList<Integer>();
		ArrayList<Double> seconds = new ArrayList<Double>();
		ArrayList<String> operations = new ArrayList<String>();
		
		//sorting equation into minutes, seconds, and operations
		String currentChar;
		int beginning = 0;
		for(int i = 0; i < expression.length(); i++) {
			currentChar = expression.substring(i,i+1);
			if(currentChar.equals(":")) {
				minutes.add(Integer.parseInt(expression.substring(beginning,i)));
				beginning = i+1;
				hours.add(0);
			} else if(currentChar.contains("+") || currentChar.contains("-")){
				seconds.add(Double.parseDouble(expression.substring(beginning,i)));
				operations.add(currentChar);
				beginning = i+1;
			}
		}
		operations.remove(operations.size()-1);

		//adding the times
		int totalHours = hours.get(0);
		int totalMinutes = minutes.get(0);
		double totalSeconds = seconds.get(0);
		for(int i = 0; i < operations.size(); i++) {
			if(operations.get(i).equals("+")) {
				totalMinutes += minutes.get(i+1);
				totalSeconds += seconds.get(i+1);
			} else {
				totalMinutes -= minutes.get(i+1);
				totalSeconds -= seconds.get(i+1);
			}
		}
		
		//converting time into sub 60 
		while(totalSeconds >= 60) {
			totalMinutes++;
			totalSeconds -= 60;
		}
		while(totalMinutes >= 60) {
			totalHours++;
			totalMinutes -= 60;
		}
		
		//adjusting if time is negative
		while(totalSeconds <= -60) {
			totalMinutes--;
			totalSeconds += 60;
		}
		while(totalMinutes <= -60) {
			totalHours--;
			totalMinutes += 60;
		}
		
		System.out.println("Total Time:");
		System.out.println(totalHours + " hours");
		System.out.println(totalMinutes + " minutes");
		System.out.println(totalSeconds + " seconds");
		if(totalHours > 0) {
			System.out.print(totalHours + ":");
		}
		System.out.print(totalMinutes + ":" + totalSeconds);
	}
}
